<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itsource.crm.mapper.OrderMapper">
    <!--自定义映射规则-->
    <resultMap id="orderResultMap" type="Order">
        <id column="id" property="id"/>
        <result column="sn" property="sn"/>
        <result column="signTime" property="signTime"/>
        <result column="sum" property="sum"/>
        <result column="intro" property="intro"/>
        <!--外表customer-->
        <association property="customer" javaType="Customer">
            <id column="cid" property="id"/>
            <result column="cname" property="name"/>
        </association>
        <!--外表employee-->
        <association property="seller" javaType="Employee">
            <id column="eid" property="id"/>
            <result column="eusername" property="username"/>
        </association>
    </resultMap>
    <!--保存-->
    <insert id="save" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO t_order(sn,customer_id,signTime,seller_id,sum,intro) VALUES (#{sn},#{customer.id},#{signTime},#{seller.id},#{sum},#{intro})
    </insert>
    <!--删除-->
    <delete id="delete">
        DELETE FROM t_order WHERE id=#{id}
    </delete>
    <!--批量删除-->
    <delete id="batchDelete">
        DELETE FROM t_order WHERE id IN
        <foreach collection="list" item="i" open="(" close=")" separator=",">
            #{i.id}
        </foreach>
    </delete>
    <!--修改-->
    <update id="update">
        UPDATE t_order set sn=#{sn},customer_id=#{customer.id},signTime=#{signTime},seller_id=#{seller.id},sum=#{sum},intro=#{intro} WHERE id=#{id}
    </update>
    <!--根据id查询-->
    <select id="selectById" resultMap="orderResultMap">
         SELECT o.id,o.sn,o.signTime,o.sum,o.intro,c.id cid,c.name cname,e.id eid ,e.username eusername
        FROM t_order o JOIN t_customer c ON o.customer_id = c.id
       JOIN t_employee e ON o.seller_id = e.id WHERE o.id=#{id}
    </select>
    <!--查询所有-->
    <select id="selectAll" resultMap="orderResultMap">
       SELECT  o.id,o.sn,o.signTime,o.sum,o.intro,c.id cid,c.name cname,e.id eid ,e.username eusername
        FROM t_order o JOIN t_customer c ON o.customer_id = c.id
       JOIN t_employee e ON o.seller_id = e.id
    </select>
    <!--根据分页查询-->
    <select id="selectPageByQuery" resultMap="orderResultMap">
        SELECT  o.id,o.sn,o.signTime,o.sum,o.intro,c.id cid,c.name cname,e.id eid ,e.username eusername
        FROM t_order o JOIN t_customer c ON o.customer_id = c.id
        JOIN t_employee e ON o.seller_id = e.id
        <include refid="whereSql"/>
        LIMIT #{begin},#{pageSize}
    </select>
    <!--模糊查询总条数-->
    <select id="getTotalDataCount" resultType="long">
        SELECT  COUNT(*) FROM t_order o
        <include refid="whereSql"/>
    </select>
    <sql id="whereSql">
        <where>
           <!-- <if test="customer!=null and customer!=''">
                AND customer LIKE CONCAT("%",#{customer},"%")
            </if>-->
            <if test="sn!=null and sn!=''">
                AND o.sn LIKE CONCAT("%",#{sn},"%")
            </if>
            <if test="beginTime!=null and beginTime!=''">
                <![CDATA[ AND DATE_FORMAT(signTime,'%Y-%m-%d')>=  DATE_FORMAT(#{beginTime},'%Y-%m-%d')]]>
            </if>
            <if test="endTime!=null and endTime!=''">
               <![CDATA[ AND DATE_FORMAT(signTime,'%Y-%m-%d') <= DATE_FORMAT(#{endTime},'%Y-%m-%d')]]>
            </if>
        </where>
    </sql>
</mapper>